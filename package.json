{
  "name": "nightincode",
  "displayName": "Nightincode",
  "description": "Elemental Clojure/Script support for Visual Studio Code.",
  "version": "0.13.0",
  "publisher": "pedrorgirardi",
  "author": {
    "name": "Pedro Girardi",
    "email": "prg@fastmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BetterThanTomorrow/calva.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Clojure",
    "ClojureScript"
  ],
  "activationEvents": [
    "workspaceContains:**/deps.edn"
  ],
  "main": "./extension.js",
  "contributes": {
    "configurationDefaults": {
      "[clojure]": {
        "editor.wordSeparators": "()[]{}\\,;@$%^&|\"`~"
      }
    },
    "configuration": [
      {
        "type": "object",
        "title": "Nightincode",
        "properties": {
          "nightincode.trace.server": {
            "type": "string",
            "default": "verbose",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "description": "Trace LSP messages between the Visual Studio Code and the server."
          }
        }
      }
    ],
    "languages": [
      {
        "id": "clojure",
        "aliases": [
          "Clojure",
          "clojure"
        ],
        "extensions": [
          ".clj",
          ".cljs",
          ".cljc",
          ".cljd",
          ".cljx",
          ".clojure",
          ".edn",
          ".joke",
          ".boot",
          ".bb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "title": "Dump",
        "category": "Nightincode",
        "command": "nightincode.dump"
      }
    ]
  },
  "scripts": {
    "clean": "rm -rf .shadow-cljs/",
    "watch": "npx shadow-cljs watch :extension",
    "compile": "npx shadow-cljs compile :extension",
    "release": "npx shadow-cljs release :extension",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "shadow-cljs": "^2.26.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
