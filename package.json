{
  "name": "nightincode",
  "displayName": "Nightincode",
  "description": "Elemental Clojure/Script support for Visual Studio Code.",
  "version": "0.1.0",
  "publisher": "pedrorgirardi",
  "author": {
    "name": "Pedro Girardi",
    "email": "prg@fastmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BetterThanTomorrow/calva.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16",
    "vscode": "^1.66.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Clojure",
    "ClojureScript"
  ],
  "activationEvents": [
    "onLanguage:clojure"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "clojure",
        "aliases": [
          "Clojure",
          "clojure"
        ],
        "extensions": [
          ".clj",
          ".cljs",
          ".cljc",
          ".cljd",
          ".cljx",
          ".clojure",
          ".edn",
          ".joke",
          ".boot",
          ".bb"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "clean": "rm -rf .shadow-cljs/",
    "watch": "npx shadow-cljs watch :extension",
    "compile": "npx shadow-cljs compile :extension",
    "release": "npx shadow-cljs release :extension",
    "vscode:prepublish": "npm run clean && npm run release"
  }
}
